{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "emcc",
            "args": [
                "src/main.c",
                "src/path.c",
                "lib/libwren.bc",
                "-std=c11",
                "-I./include",
                "-O3",
                "-s", "WASM=1",
                "-s", "USE_WEBGL2=1",
                "-s", "USE_SDL=2",
                "-s", "USE_SDL_IMAGE=2",
                "-s", "USE_SDL_MIXER=2",
                "-s", "USE_SDL_TTF=2",
                "-s", "SDL2_IMAGE_FORMATS=\'[\"png\"]\'",
                "-o", "docs/index.html",
                "--preload-file", "wren"
            ],

            "problemMatcher": {
                "owner": "emcc",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true

            },
            "dependsOn":["prebuild"]
        },
        {
            "label": "prebuild",
            "type": "shell",
            "command": "${workspaceFolder}/prebuild",
            "args": [ "${workspaceFolder}" ],
            "group": "build"
        }
    ]
}
